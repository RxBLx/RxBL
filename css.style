/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', sans-serif;
  background-color: #121212;
  color: #e0e0e0;
  line-height: 1.6;
  padding: 20px;
}

h1, h2 {
  font-family: 'Poppins', sans-serif;
}

.container {
  max-width: 1100px;
  margin: auto;
}

.site-header {
  text-align: center;
  margin-bottom: 20px;
}

.hamburger {
  float: right;
  background: none;
  border: none;
  font-size: 24px;
  color: #6c4dff;
  cursor: pointer;
}

.search-box {
  margin: 10px 0;
  text-align: center;
}

.search-box input {
  width: 70%;
  padding: 8px;
  border-radius: 4px;
  border: none;
}

.search-box button {
  padding: 8px 12px;
  background: #6c4dff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.post-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.post-card {
  flex: 1 1 calc(33% - 20px);
  background: #1e1e1e;
  padding: 15px;
  border-radius: 8px;
  overflow: hidden;

  opacity: 0;
  transform: translateY(40px);
  animation: fadeInUp 0.8s ease forwards;
  animation-play-state: paused;
}

.post-card img {
  width: 100%;
  height: auto;
  border-radius: 6px;
}

.post-card h2 {
  font-size: 18px;
  margin: 10px 0;
}

.pagination {
  margin: 30px 0;
  text-align: center;
}

.pagination a {
  padding: 8px 12px;
  background: #6c4dff;
  color: white;
  text-decoration: none;
  margin: 0 5px;
  border-radius: 4px;
  display: inline-block;
}

.pagination a:hover {
  background: #5a3fd1;
}

.ad-box {
  background: #1e1e1e;
  padding: 20px;
  text-align: center;
  margin: 20px 0;
}

.post-navigation a {
  display: inline-block;
  margin-top: 30px;
  padding: 10px 20px;
  background: #6c4dff;
  color: #fff;
  border-radius: 5px;
  text-decoration: none;
}

.post-navigation a:hover {
  background: #5a3fd1;
}

.site-footer {
  text-align: center;
  margin-top: 40px;
  color: #999;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (prefers-reduced-motion: no-preference) {
  .post-card {
    animation-play-state: paused;
  }

  .post-card.visible {
    animation-play-state: running;
  }
}
